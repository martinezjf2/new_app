<h2>Add a Vacation</h2>

<form action="/vacations" method="post"

    
        <label for="start_date">Start Date:
        <input type="date" id="start_date" name="start_date" min="2020-04-01" max="3000-04-01" required>
        <span class="validity"></span></label>
  

    
    <label>End Date: </label>
    <input type="text" name="end_date" /><br /><br />

    <label>Resort Name: </label>
    <input type="text" name="resort_name" /><br /><br />

    <label>Give a Brief Description: </label>
    <textarea id="description" name="description" rows="5 cols="33"></textarea>><br /><br />

    <input type="submit" value="Create" />

</form>